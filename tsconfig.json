{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@assets": ["src/assets"],
            "@components": ["src/components"],
            "@hooks": ["src/hooks"],
            "@navigation": ["src/navigation"],
            "@navigation/*": ["src/navigation/*"],
            "@screens": ["src/screens"],
            "@theme": ["src/theme"],
            "@theme/*": ["src/theme/*"],
            "@utils": ["src/utils"],
            "@validators/*": ["src/validators/*"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
